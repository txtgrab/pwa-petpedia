{
    "version": 2,
    "builds": [
      {
        "src": "petpedia-backend/server.js",
        "use": "@vercel/node",
        "config": { "includeFiles": ["petpedia-backend/api-docs.yaml"] }
      },
      {
        "src": "petpedia-pwa/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "dist" }
      }
    ],
    "routes": [
      {
        "src": "/api/docs",
        "dest": "/petpedia-backend/server.js"
      },
      {
        "src": "/api/(.*)",
        "dest": "/petpedia-backend/server.js"
      },
      {
        "src": "/(.*)",
        "dest": "/petpedia-pwa/$1"
      }
    ]
  }